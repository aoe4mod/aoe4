{
  "extends": "../../tsconfig.json",
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "bundler",
    "types": [
      "@aoe4mod/types"
    ],
    "paths": {
      "@aoe4mod/*": [
        "../../packages/*/src"
      ]
    },
    "strict": true
  },
  "references": [
    {
      "path": "../../packages/utils"
    }
  ],
  "tstl": {
    "luaTarget": "5.3",
    "sourceMapTraceback": false,
    "noHeader": true,
    "noImplicitSelf": true,
    "luaPlugins": [
      {
        "name": "@aoe4mod/import-plugin"
      }
    ]
  }
}
